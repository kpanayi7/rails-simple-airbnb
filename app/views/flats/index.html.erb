<div class="container mt-3 mb-3">
  <h2>All our flats: (<%= @flats.count %>)</h2>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-sm-4 mb-4">
        <div class="card">
          <div class="card-body bg-light bg-opacity-10">
            <h2 class="card-title"><%= flat.name %></h2>
            <p class="card-text"><%= flat.address %></p>
            <p class="card-text"><i class="fas fa-euro-sign"></i> <%= "#{flat.price_per_night}" %>  <i class="fas fa-users"></i> <%= "#{flat.number_of_guests}" %></p>
          </div>
          <div class="card-body d-flex justify-content-around">
            <%= link_to "More info", flat_path(flat), class: "link link-primary" %>
            <%= link_to "Edit this flat", edit_flat_path(flat), class: "link link-warning" %>
            <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: "link link-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
